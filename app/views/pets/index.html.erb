<div class="container">
  <h1>Pets#index</h1>
  <p>Find me in app/views/pets/index.html.erb</p>
  <% @pets.each do |pet| %>
    <div class="card-product">
      <% if pet.photo.attached? %>
        <%= image_tag(pet.photo, style: "width: 100px;") %>
      <% end %>
      <div class="card-product-infos">
        <h2><%= pet.name %></h2>
        <p><%= pet.animal %></p>
        <p><%= pet.description %></p>
      </div>
    </div>
  <% end %>
</div>
